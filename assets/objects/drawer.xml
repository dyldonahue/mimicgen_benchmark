<?xml version="1.0" ?>
<mujoco model="cabinet_with_drawers">
  <asset>
    <!-- Cabinet body meshes -->
    <mesh name="cabinet_visual" file="../meshes/drawer_base_visual.stl"/>
    <mesh name="cabinet_collision" file="../meshes/drawer_base_collision.stl"/>
    
    <!-- Drawer meshes -->
    <mesh name="drawer_visual" file="../meshes/drawers_visual.stl"/>
    <mesh name="drawer_collision" file="../meshes/drawers_collision.stl"/>
  </asset>
  
  <worldbody>
    <body>
      <body name="object">
        <!-- ADD FREE JOINT HERE for positioning the cabinet in world -->
        <joint type="free" damping="0.0005"/>
        
        <!-- Cabinet body geoms -->
        <geom name="cabinet_visual" type="mesh" mesh="cabinet_visual" 
              rgba="0.8 0.8 0.8 1.0" contype="0" conaffinity="0" group="1" density="1"/>
        <geom name="cabinet_collision" type="mesh" mesh="cabinet_collision" 
              rgba="0.5 0.5 0.5 0.3" density="500.0" friction="0.95 0.3 0.1" 
              condim="4" solref="0.001 1" solimp="0.998 0.998 0.001" group="0"/>
        
        <!-- Drawer 1 (top) -->
        <body name="drawer1" pos="0 0 0.15">
          <inertial pos="0 0 0" mass="0.5" diaginertia="0.01 0.01 0.01"/>
          <joint name="drawer1_joint" type="slide" axis="1 0 0" range="0 0.35" 
                 limited="true" damping="10" frictionloss="1"/>
          
          <geom name="drawer1_visual" type="mesh" mesh="drawer_visual" 
                rgba="0.8 0.8 0.8 1.0" contype="0" conaffinity="0" group="1" density="1"/>
          <geom name="drawer1_collision" type="mesh" mesh="drawer_collision" 
                rgba="0.5 0.5 0.5 0.3" density="500.0" friction="0.95 0.3 0.1" 
                condim="4" solref="0.001 1" solimp="0.998 0.998 0.001" group="0"/>
        </body>
        
        <!-- Drawer 2 (middle) -->
        <body name="drawer2" pos="0 0 0.10">
          <inertial pos="0 0 0" mass="0.5" diaginertia="0.01 0.01 0.01"/>
          <joint name="drawer2_joint" type="slide" axis="1 0 0" range="0 0.35" 
                 limited="true" damping="10" frictionloss="1"/>
          
          <geom name="drawer2_visual" type="mesh" mesh="drawer_visual" 
                rgba="0.8 0.8 0.8 1.0" contype="0" conaffinity="0" group="1" density="1"/>
          <geom name="drawer2_collision" type="mesh" mesh="drawer_collision" 
                rgba="0.5 0.5 0.5 0.3" density="500.0" friction="0.95 0.3 0.1" 
                condim="4" solref="0.001 1" solimp="0.998 0.998 0.001" group="0"/>
        </body>
        
        <!-- Drawer 3 (bottom) -->
        <body name="drawer3" pos="0 0 0.05">
          <inertial pos="0 0 0" mass="0.5" diaginertia="0.01 0.01 0.01"/>
          <joint name="drawer3_joint" type="slide" axis="1 0 0" range="0 0.35" 
                 limited="true" damping="10" frictionloss="1"/>
          
          <geom name="drawer3_visual" type="mesh" mesh="drawer_visual" 
                rgba="0.8 0.8 0.8 1.0" contype="0" conaffinity="0" group="1" density="1"/>
          <geom name="drawer3_collision" type="mesh" mesh="drawer_collision" 
                rgba="0.5 0.5 0.5 0.3" density="500.0" friction="0.95 0.3 0.1" 
                condim="4" solref="0.001 1" solimp="0.998 0.998 0.001" group="0"/>
        </body>
      </body>
      
      <!-- Sites -->
      <site rgba="0 0 0 0" size="0.005" pos="0 0 0" name="bottom_site"/>
      <site rgba="0 0 0 0" size="0.005" pos="0 0 0.2" name="top_site"/>
      <site rgba="0 0 0 0" size="0.005" pos="0.05 0 0.1" name="horizontal_radius_site"/>
    </body>
  </worldbody>
</mujoco>